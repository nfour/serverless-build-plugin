{
  "name": "serverless-build-plugin",
  "version": "2.0.0-1",
  "description": "A Node.js focused build optimizer plugin for serverless",
  "main": "./index.js",
  "engines": {
    "node": ">= 4.3"
  },
  "scripts": {
    "build": "./scripts/build.bash",
    "build:watch": "tsc --watch",
    "test:unit": "yarn jest -- --testPathPattern='\\/[^\\/\\.]+\\.test\\.tsx?$'",
    "test:integration": "yarn jest -- --testPathPattern='\\.int\\.test\\.tsx?$'",
    "build:link": "yarn build && cd dist && yarn unlink && yarn link",
    "test": "yarn test:unit",
    "lint": "tslint 'src/**/*.ts'",
    "coverage": "yarn test:unit -- --coverage"
  },
  "dependencies": {
    "archiver": "^1.3.0",
    "bluebird": "^3.5.0",
    "chalk": "^1.1.3",
    "findit": "^2.0.0",
    "findit2": "^2.2.3",
    "fs-extra": "^3.0.1",
    "get-folder-size": "^1.0.0",
    "is-stream": "~1.1.0",
    "js-yaml": "^3.8.4",
    "lutils": "^2.4.0",
    "minimatch": "^3.0.4",
    "mkdirp": "~0.5.1",
    "resolve-pkg": "^1.0.0",
    "semver": "^5.3.0",
    "source-map-support": "^0.4.15",
    "walker": "^1.0.7"
  },
  "peerDependencies": {
    "babel-core": "*",
    "babel-preset-babili": "*",
    "uglify-js": "*"
  },
  "devDependencies": {
    "@types/archiver": "^1.3.2",
    "@types/babel-core": "^6.7.14",
    "@types/bluebird": "^3.5.5",
    "@types/chalk": "^0.4.31",
    "@types/fs-extra": "^3.0.3",
    "@types/fs-promise": "^1.0.3",
    "@types/graceful-fs": "^2.0.29",
    "@types/jest": "^19.2.4",
    "@types/js-yaml": "^3.5.31",
    "@types/minimatch": "^2.0.29",
    "@types/mkdirp": "^0.3.29",
    "@types/node": "^7.0.29",
    "@types/semver": "^5.3.31",
    "@types/source-map-support": "^0.4.0",
    "@types/typescript": "^2.0.0",
    "@types/uglify-js": "^2.6.29",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "tslint-config-temando": "^1.1.4",
    "typescript": "^2.3.4",
    "uglify-js": "3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nfour/serverless-build-plugin"
  }
}
